{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.coverage": true
  },
  "prettier.tabWidth": 2,
  "python.testing.pytestArgs": ["backend"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "[snippets]": {}
}
